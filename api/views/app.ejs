<!DOCTYPE html>
<html ng-app="hexo">
  <head>
    <meta charset="utf-8">
    <title ng-bind="title">Hexo Web UI</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%- asset_css('app') %>
    <link href='http://fonts.googleapis.com/css?family=Source+Code+Pro' rel='stylesheet' type='text/css'>
  </head>
  <body ng-controller="BodyCtrl" ng-class="{'site-nav-on': isSiteNavOn}">
    <div id="wrap">
      <div id="wrap-inner" ng-click="closeSiteNav()">
        <div id="container" ui-view></div>
      </div>
      <a id="site-nav-toggle" ng-click="toggleSiteNav()"></a>
    </div>
    <nav id="site-nav">
      <ul id="site-nav-list">
        <li class="site-nav-item">
          <a href="/" class="site-nav-link" ng-click="closeSiteNav()"><i id="site-nav-home-icon"></i>Home</a>
        </li>
        <li class="site-nav-item">
          <a href="/posts" class="site-nav-link" ng-click="closeSiteNav()"><i id="site-nav-posts-icon"></i>Posts</a>
        </li>
        <li class="site-nav-item">
          <a href="/monitor" class="site-nav-link" ng-click="closeSiteNav()"><i id="site-nav-monitor-icon"></i>Monitor</a>
        </li>
      </ul>
      <footer id="footer">
        Web UI <%= webui_version %> / Hexo <%= version %><br>
        <a href="http://zespia.tw/hexo/" target="_blank">Docs</a> / <a href="https://github.com/tommy351/hexo-webui" target="_blank">GitHub</a>
      </footer>
    </nav>
    <%- asset_js('app') %>
  </body>
</html>